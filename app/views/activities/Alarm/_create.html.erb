<% if activity.trackable %>
	<% unless activity.trackable.alarmed_post_id.nil? %>
		<strong> a post </strong>
		written by <%= link_to activity.trackable.alarmed_post.user.screen_name, posts_user_path(activity.trackable.alarmed_post.user) %>.
		No one other than teachers can see the post now.
	<% else %>
		<strong> a comment </strong> 
		made by <%= link_to activity.trackable.alarmed_comment.commenter.screen_name, posts_user_path(activity.trackable.alarmed_comment.commenter) %>
		on post #<%= link_to activity.trackable.alarmed_comment.commented_post.id, new_post_comment_path(activity.trackable.alarmed_comment.commented_post) %>.
		No one other than teachers can see the comment now.
	<% end %>
<% else %>
	a post or comment but has since been unlarmed by the teacher.
<% end %>