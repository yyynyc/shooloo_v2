<% if activity.trackable %>
	<strong>requested Authorization</strong> on <%= activity.created_at.strftime("%b %d, %Y") %>
	from
	<%= link_to activity.recipient.screen_name, posts_user_path(activity.recipient) %>
	(a <%= activity.recipient.role %> 
    <% if !activity.recipient.grade.nil? %>
    	in grade <%= activity.recipient.grade %>
    <% end %>).
<% else %>
	requested an authorization but has since withdrawn it.
<% end %>