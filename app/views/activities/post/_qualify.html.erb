<% if activity.trackable %>	verified
	<strong><%= link_to "Contest Entry", post_correction_path(activity.trackable) %></strong> as 
	<% if activity.trackable.qualified == "yes" %>
		<strong> QUALIFIED </strong>
	<% else %>
		disqualified
	<% end %>		
	on <%= activity.created_at.strftime("%b %d, %Y") %>	
	written by <%= link_to activity.recipient.full_name_us, posts_user_path(activity.recipient) %>
	(a <%= activity.recipient.role %> 
	in grade <%= activity.recipient.grade %>).
	<br/>	
<% else %>
	deleted a post. 
<% end %>