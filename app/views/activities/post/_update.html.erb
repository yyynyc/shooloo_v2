<% if activity.trackable %>
	<strong>REVISED</strong> 
	<%= link_to "a post", new_post_comment_path(activity.trackable) %> 
	on <%= activity.created_at.strftime("%b %d, %Y") %>
	based on feedback from <%= link_to activity.recipient.screen_name, posts_user_path(activity.recipient) %>
	(a <%= activity.recipient.role %>
	in grade <%= activity.recipient.grade %>).
<% else %>
	deleted a post that others have commented or rated.
<% end %>

