<% if activity.trackable %>
	<strong>ASSGINED</strong> on <%= activity.created_at.strftime("%b %d, %Y") %> to
	<%= link_to activity.recipient.screen_name, posts_user_path(activity.recipient) %>
	(a <%= activity.recipient.role %>
	in grade <%= activity.recipient.grade %>) to 
	<% if activity.trackable.assignment.assigned_post_id.nil? %>
		 <%= link_to "create a new post", assignment_path(activity.trackable.assignment) %>.
	<% else %>
		<%= link_to "critique post #{activity.trackable.assignment.assigned_post_id}", post_comments_path(activity.trackable.assignment.assigned_post_id) %>
	<% end %>
<% else %>
	added an assignment which has since been removed.
<% end %>