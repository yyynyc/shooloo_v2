<%= form_for @alarm, :url => comment_alarms_path(comment.id) do |f| %>
	<%= f.hidden_field :alarmer_id, value: current_user.id %>
  <%= f.hidden_field :alarmed_comment_id, value: comment.id %>
  <%= f.hidden_field :reason_ids, value: 3 %>
  <%= f.submit "Alarm", class: "btn btn-small btn-default", confirm: "You should raise an alarm only if this comment contains users' real names or contact information, has offensive remarks, or has nothing to do with math.  If the admin decides your alarm is appropriate, she will award you bonus points. However, if you raise false alarms, penalty points will be deducted out of your account. Continue?", disable_with: "Proccessing..." %>
<% end %>