<%= form_for(current_user.authorizations.build(authorizer_id: user.id)) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
  	<div><%= f.hidden_field :authorizer_id %></div>
  	<div class="search-label">
  		<%= f.label :code, "Authorization Code" %>
  	</div>
  	<div class="search-label">
	  <%= f.text_field :code %>
	</div>
	<div>
  		<%= f.submit "Request Authorization from Shooloo", data: { disable_with: "Wait......." }, class: "btn btn-large btn-primary" %>
  	</div>
<% end %>