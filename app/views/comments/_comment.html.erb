<ol class="posts">
	<div class= "row">
		<div class="span1">
			<%= image_tag comment.commenter.avatar.url (:small) %> 
		</div>
		<div style="margin: -.1em 0em 1em 7em;">
			<span style="float:right;"> 
				<% unless comment.photo_file_name.nil? %>   
				<%= link_to            \
					image_tag(comment.photo.url(:small)), 
					comment.photo.url(:large),
					:class=>'fancybox' %> 
				<% end %>
			</span>
			<span>								
				<%= link_to comment.commenter.screen_name, posts_user_path(comment.commenter) %> 
				<span class="timestamp"> in </span>
				<%= comment.commenter.grade %>
				<span class="timestamp"> commented on </span>
				<%= comment.created_at.strftime("%b %d, %Y") %>.
				<% if current_user?(comment.commenter) %> 
	            	<%= link_to "", comment, method: :delete,
	              data: { confirm: "Delete comemnt. Are you sure?" },
	              title: "Delete comment", class: "icon-trash" %>
	            <% end %>
	            <span style="display: inline-block;">
	            	<% if comment.visible? %>
	            		<%= render partial: 'alarms/alarm_comment', locals: {post: comment.commented_post, comment:comment} %>	
	            	<% else %>
	            		<% if current_user.admin? %>
	            			<%= render partial: 'alarms/unalarm_comment', locals: {post: comment.commented_post, comment:comment} %>
	            		<% end %>
	            	<% end %>	
	       		</span>	           			
				<%= wrap(simple_format(comment.content)) %>			
			</span>			
		</div>
	</div>  
</ol>

 
