<% title "Update Correction" %>
<% description "Update a Correction" %>
<% noindex %>
<% nofollow %>

<% url = correction_path %>
<% f = f %>
<% if current_user.admin? && @correction.state.in?(["submitted", "revised"]) %>
	<% submission = "corrections/revision" %>
<% else %>
	<% submission = "corrections/submission" %> 
<% end %>
 
<% heading = "Edit the Following Corrections" %>
<%= render partial: 'corrections/form', locals: {url: url, submission: submission, heading: heading, correction: @correction, post: @post, alarm: @alarm, corrected_post: @correction} %>