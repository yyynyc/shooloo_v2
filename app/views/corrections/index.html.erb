<% noindex %>
<% nofollow %>

<h1>All Corrections</h1>
<h2> Under Review </h2>
<% if @checked_out.any? %>
	<% @checked_out.each do |p| %>
		Post #<%= link_to p.id, new_post_correction_path(p) %> | 
	<% end %>
<% end %>
<h2> Draft </h2>
<% if @corrections_draft.any? %>
	<ul class="users" %>
		<% @corrections_draft.each do |c| %>
			<li>
				<%= c.editor.full_name_us %> on <%= c.updated_at %> editted
				Post #<%= link_to c.corrected_post.id, correction_path(c) %> |
				<%= link_to "admin_edit", edit_correction_path(c) %>
			</li>
		<% end %>
	</ul>
<% end %>
<h2> Revised </h2>
<% if @corrections_revised.any? %>
	<ul class="users" %>
		<% @corrections_revised.each do |c| %>
			<li>
				<%= c.editor.full_name_us %> on <%= c.updated_at %> editted
				Post #<%= link_to c.corrected_post.id, correction_path(c) %> |
				<%= link_to "admin_edit", edit_correction_path(c) %>
			</li>
		<% end %>
	</ul>
<% end %>
<h2> Published </h2>
<% if @corrections_published.any? %>
	<ul class="users" %>
		<% @corrections_published.each do |c| %>
			<li>
				<%= c.editor.full_name_us %> on <%= c.updated_at %> editted
				Post #<%= link_to c.corrected_post.id, correction_path(c) %> |
				<%= link_to "admin_edit", edit_correction_path(c) %>
			</li>
		<% end %>
	</ul>
<% end %>
