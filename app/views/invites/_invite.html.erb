<%= form_for(current_user.invites.build(post_id: post.id), remote: true) do |f| %>
	<%= f.hidden_field :post_id, value: post.id %>
	<button type="submit", class="btn btn-small btn-success", onclick="invite_alert()">
		<i class='icon-envelope icon-white'></i> Invite
	</button>
<% end %>


<script>
	function invite_alert (){
		alert('All of your followers will get an invitation to comemnt on this post. Continue?');
	}
</script>