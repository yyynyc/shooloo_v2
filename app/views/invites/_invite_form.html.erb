<div id="invite_form_<%= post.id %>">
	<% if can? :create, Invite %>	
	  <% if current_user.invites.find_by_post_id(post.id).nil? %>
	   	<%= render partial: 'invites/invite',  
	   			locals: {invite: invite, post: post} %>
	  <% else %>	    
	    <%= render partial: 'invites/uninvite' %>
	  <% end %>
	<% else %>
		<%= link_to raw('<i class="icon-heart icon-white"></i> Invite'), my_abilities_path(error: true), class: "btn btn-small btn-success" %>
	<% end %>	  
 </div>
 