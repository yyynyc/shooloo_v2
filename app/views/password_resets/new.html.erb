<% provide(:title, "Request Password Reset") %> 
<h1>Reset Your Password</h1>

<div class="row">
	<div class="span9 offset3">
		Enter your screen name, and instructions will be sent to your PERSONAL email address.
		<%= form_tag password_resets_path, :method => :post do %>
	  		<section>
			  	<span class="password-request-label">
			    	<%= label_tag :screen_name %>
			    </span>
			    <span class="password-request-email">
			    	<%= text_field_tag :screen_name, params[:screen_name] %>
				</span>
				<span class="password-request-label">
					<%= submit_tag "Reset Password", class: "btn btn-medium btn-primary" %>
				</span>
	  		</section>	  		
		<% end %>
	</div>
</div>
