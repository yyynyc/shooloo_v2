<div class="row">   
  <div class="post_review_user_info">     
    <%= render partial: 'posts/post_user', locals: {post: @post} %>
    <% if !@post.visible? %>   
      <% if current_user.admin? || current_user.role == "teacher" %>
        <div class="btn-formtastic">
          <%= render partial: 'alarms/unalarm', locals: {post: @post} %>
        </div>
      <% end %>
    <% end %>     
    <%= render partial: 'posts/post_stats', locals: {post: @post} %>
  </div>
</div>
<div class="row border">     
  <div class="span5">
    <%= image_tag(@post.photo.url (:large), alt: "Shooloo Common Core Math Problem ##{@post.id}", title: "Shooloo Common Core Math Problem ##{@post.id}")  %><br/>
    <% unless @post.image_host.nil? %>
      <span class="image-host-large">Image courtesy of <%= @post.image_host %>.
      </span><br/> 
    <% end %>
    <div class="row">
     <br/><%= render partial: 'posts/post_buttons', locals: {post: @post, like: @like, invite: @invite } %>
    </div>  
  </div>
  <div class="span7 alert-heading">         
    <p>
      <strong>Question: </strong><%= simple_format(@post.question) %>
    </p>
    <p>
      <strong>Answer: </strong><%= @post.answer %><i><span class="no"> - Is this answer correct?</span></i>
    </p>
    <% unless @post.level.nil? %>
      <p>
        <strong>"I can" statement: </strong> In <%= @post.domain.name %>, <%= @post.standard.ICan %><i><span class="no"> - Is this "I can" statement suitable for this question?</span></i>
      </p>
    <% end %>
  </div>
</div>
