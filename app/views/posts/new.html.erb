<% title "Create Post" %>
<% description "Create a new math word problem aligned with the Common Core State Standard" %>
<% noindex %>
<% nofollow %>
<% url = posts_path %>
<% save = "Publish!" %>



<% if @response.nil? %>
	<h1>Create My Own Math Story</h1>
	<%= render partial: 'posts/post', locals: {url: url, save: save, post: @post} %>
<% else %>
	<h1>Complete My Homework</h1>
	<%= render 'posts/homework_post' %>
<% end %>	