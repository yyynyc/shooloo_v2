<div itemscope itemtype="http://schema.org/CreativeWork">
  <meta itemprop="description" content="Sign in Shooloo to access over 1,000 student-authored math word problems aligned with the Common Core State Standard.">
  <%= render 'shared/meta' %>

  <h1>Log In</h1>

  <div class="row">
    <div class="span5 offset3 well">
      <%= form_for(:session, url: sessions_path) do |f| %>
        <section>
          <span class="sign-in-label" ><%= f.label :screen_name, "Screen Name" %>
          </span> 
          <span class="search-label"><%= f.text_field :screen_name%>
          </span> 
          <span class="search-label">
            <a href="#", class="question", rel="popover", title="Screen Name", data-content="Screen name is case sensitive. If you've forgotten your sreen name, <a href='contact'>contact admin</a> to have your screen name emailed to you." %> 
              <i class="icon-question-sign icon-medium" ></i>
            </a>
          </span>          
        </section>

        <section>
          <span class="sign-in-label"><%= f.label :password %>
          </span>
          <span class="search-label"><%= f.password_field :password %>
          </span>
          <span class="search-label">
            <a href="#", class="question", rel="popover", title="Password", data-content="Password is case sensitive. If you've forgotten your password, follow the <a href='/password_resets/new'>password reset link</a> to change your password." %> 
              <i class="icon-question-sign icon-medium" ></i>
            </a>
          </span>   
        </section>
        <section style="margin: 1em 1em -1em 0em;">
          <%= f.submit "Sign in", class: "btn btn-small btn-primary btn-formtastic" %>
        </section>
      <% end %>    
    </div>
    <div class="span6 offset3">
      <p>Forgotten password? <strong><%= link_to "Click here", new_password_reset_path %> to reset your password.</strong></p>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>

