<% provide(:title, "Sign In") %>
<h1>Sign In</h1>

<div class="row">
  <div class="span4 offset4 well">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <section>
        <span class="sign-in-label"><%= f.label :email %>
        </span>
        <span class="search-label"><%= f.text_field :email%>
        </span>
      </section>

      <section>
        <span class="sign-in-label"><%= f.label :password %>
        </span>
        <span class="search-label"><%= f.password_field :password %>
        </span>
      </section>
      <section>
        <span class="remember-label">
          <%= f.label :remember_me, "Remember me on this computer." %>
        </span>
        <span class="search-label">      
          <%= f.check_box :remember_me, {}, 1, params[:remember_me] %>
        </span>      
      </section>
      <section style="margin: 1em 1em -1em 0em;">
        <%= f.submit "Sign in", class: "btn btn-small btn-primary btn-formtastic" %>
      </section>
    <% end %>    
  </div>
  <div class="span6 offset4">
    <p>Forgotten password? <strong><%= link_to "Click here", new_password_reset_path %> to reset your password.</strong></p>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

