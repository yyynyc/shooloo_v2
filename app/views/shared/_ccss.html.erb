<%= f.input :level_id, as: :select, include_blank: true, label: "Suitable grade:", collection: Hash[Level.all.map{|level| [level.name, level.id]}] %>
<%= f.input :domain_id, as: :select, include_blank: true, label: "CCSS Domain", collection: option_groups_from_collection_for_select(Level.order(:name), :domains, :name, :id, :full_core, f.object.domain_id) %>  
<%= f.input :standard_id, as: :select, include_blank: true, label: link_to("CCSS Standard", "http://www.corestandards.org/Math/", target: "_blank", confirm: "You are about to visit a site that is not part of Shooloo. Continue?"), collection: option_groups_from_collection_for_select(Domain.order(:name), :standards, :full_core, :id, :full_description, f.object.standard_id) %>
<%= f.input :hstandard_id, as: :select, include_blank: true, label: "High School Standard", collection: option_groups_from_collection_for_select(Standard.order(:description), :hstandards, :full_description, :id, :full_description, f.object.standard_id) %>