<h1> Posts Waiting to Be Corrected </h1>
<% if @checks.any? %>
  <h2>You've checked out the following posts. Correct them NOW!</h2>
  <% @checks.each do |c| %>
    Post #<%= link_to c.checked_post_id, new_post_correction_path(c.checked_post_id) %> |
  <% end %>
<% end %>
<% if @correction_drafts.any? %>
  <h2>The Following Corrections Are in Draft Mode. Complete them Now!</h2>
  <% @correction_drafts.each do |d| %>
    Post #<%= link_to d.corrected_post.id, edit_correction_path(d) %> |
  <% end %>
<% end %>
<% if @submissions.any? %>
  <h2>Priority 1</h2>
  <% @submissions.each do |s| %>
    Post #<%= link_to s.id, new_post_correction_path(s) %> |
  <% end %>
<% end %>
<% if @publications.any? %>
  <h2>Priority 2</h2>
  <%# if current_user.id == 1576 %>
    <%#= render partial: 'static_pages/editor_division', locals: {posts: @publications_middle} %>
  <%# else %>
    <%#= render partial: 'static_pages/editor_division', locals: {posts: @publications_lower} %>
  <%# end %>
  <%= render partial: 'static_pages/editor_division', locals: {posts: @publications} %>
<% end %>
<% if @submissions.blank? && @publications.blank?%>
  Nothing in the cue to be corrected.
<% end %>