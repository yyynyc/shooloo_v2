<div class="row">
	<div class="span1.5">
		<%= image_tag current_user.avatar.url (:thumb) %>
	</div>
	<div class="span2">
		<h1>
		  <%= current_user.name %>
		</h1>
		<span>
		  <%= link_to "view my profile", current_user %>
		</span>
		<span>
		  <%= pluralize(current_user.posts.count, "post") %>
		</span>
	</div>
</div>

