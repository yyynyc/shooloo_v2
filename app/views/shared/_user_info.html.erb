<div class="row">
	<div class="span1.5">
		<%= image_tag(user.avatar.url (:thumb), alt: "Shooloo member #{user.screen_name}", title: "Shooloo member #{user.screen_name}" )  %>
	</div>
	<div class="span2">
		<h1 class="user_name">
		  <%= wrap(user.screen_name) %>
		</h1>
		<%= user.grade %><br/>
		<span>			
			Published
			<a href="<%= posts_user_path(user) %>" >
			<%= pluralize(user.posts.count, "post") %></a>.
		</span>
		<span>
			Rated
			<a href="<%= rated_posts_user_path(user) %>" >
			<%= pluralize(user.rated_posts.count, "post") %></a>.
		</span>
		<span>
			Commented
			<a href="<%= commented_posts_user_path(user) %>" >
			<%= pluralize(user.commented_posts.count, "post") %></a>.
		</span>
	</div>
</div>

