<div id="myCarousel" class="carousel slide span7">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item" itemprop="image"> 
      <%= link_to image_tag("/attachments/contest.jpg", alt: "Shooloo Math Story Contest"), contest_path %>
    </div>
    <div class="item"><%= render 'shared/video_home' %></div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>