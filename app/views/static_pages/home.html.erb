<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>      	
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3 class="feed_item">Posts Published by Members that I <%= link_to "Follow", "#", "id" => "follow", "rel" => "popover", "title" => "How to Follow Other Members", "data-content" => "Click on the Community section of the menu bar, check out member profiles, click the Follow button on their profile pagees, and their posts as well as your own will automatically show up on your home page." %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="row-fluid">
    <div class="span5">
      <div style="margin-left: -4.5em;">
        <img src="/attachments/final.png">
      </div>      
      <div style="font-size: 1.5em; font-weight: bold; line-height: 2em; margin-top: -0.5em; color: #666; ">
        Publish your own word problems.<br/>
        Impress your friends.<br/>
      </div>
      <div style="margin-top: 2em;">
        <%= link_to "Sign Up - It's Free!", signup_path, class: "btn btn-large btn-primary" %>
      </div>
    </div>
    <div class="span7">
      <div style="margin-top: 1em;">  
        <%= video_tag "/attachments/NYC_Gap.m4v", size: "550x310", controls: true %>
      </div>
    </div>
  </div>
  <div class="row-fluid" style="margin-top: 4em; padding-top: 2m; border-top: 1px dotted #dedede;">
    <div class="span12" style="margin: 4em 0em 2em 0em; text-align: center;" >
      <span style="font-size: 2em; font-weight: bold;">Peer-to-Peer Learning for Math and ELA</span>
    </div>
  </div>  
  <div class="row-fluid">
    <div class="span4 well well-medium">
      <span style="text-align: center;"><h3>Creative</h3></span>
      <ul>
        <li>Write your own math stories.</li>
        <li>Apply math to real life.</li>
        <li>Put your creativity to work. </li>
      </ul><br/>
      <img src="/attachments/Math_Cool.jpg" alt="Shooloo Math Creative" style="border-radius: 5px;">
    </div>
    <div class="span4 well well-medium">                  
      <span style="text-align: center;"><h3>Collaborative</h3></span>    
      <ul>
        <li>Get feedback from your friends.</li>
        <li>Make them think and laugh.</li>
        <li>Show them how smart you are.</li>
      </ul><br/>    
      <img src="/attachments/Kids_Computer.jpg" alt="Shooloo Math Collaborative" 
      style="border-radius: 5px;">
    </div>
    <div class="span4 well well-medium">
      <span style="text-align: center;"><h3>Effective</h3></span>
      <ul>
        <li>Improve your test scores.</li>
        <li>Comply with Common Core.</li>
        <li>Master problem solving skills.</li>
      </ul><br/>
      <img src="/attachments/graduation.jpg" alt="Shooloo Math Effective" style="border-radius: 5px;">
    </div>
  </div>	
<% end %>
