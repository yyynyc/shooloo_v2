<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info', user: current_user %>
      </section>
      <section>
        <%= render 'shared/stats', user: current_user %>
      </section>
      <%= render partial: 'posts/button_simple' %>
    </aside>
    <div class="span8">
      <h3 class="center">
        Posts Published by Members that I Follow<a href="#", class="follow", rel="popover", title="What does Follow mean?", data-content="<ul class='popover-list'><li>Watch this <a href='<%= video_path(3) %>'>video tutorial</a> to get started.</li><li>Go to <a href='<%= users_path %>'>All Shooloo Members</a> page, click the Follow button beside those profiles you like.</li><li>Those members' posts will automatically show up on your home page.</li><li>Your own posts will show up here as well.</li></ul>"><i class="icon-question-sign icon-medium" ></i></a>
      </h3>
      <%= render partial: 'posts/button' %>
      <% if @drafts.any? %>
        <%= render 'shared/drafts' %>
      <% end %>
      <% if @feed_items.any? %>
        <%= render 'shared/feed' %>
      <% else %>
        <%= render 'shared/welcome' %>
      <% end %>
    </div>
  </div>  
<% else %>
  <%= render 'static_pages/home_static' %>
<% end %>
