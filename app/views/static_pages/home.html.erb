<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section class="left-panel">      	
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="span8 right-panel">
      <h3 class="feed_item">Posts Published by Members that I Follow</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
	<div class="center hero-unit">
  		<h1>Shooloo</h1>
  		<h2>Making math relevant, collaborative, and fun!</h2>	
       <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>
