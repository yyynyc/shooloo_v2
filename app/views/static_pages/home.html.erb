<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section class="left-panel">      	
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="span8 right-panel">
      <h3 class="feed_item">Posts Published by Members that I <%= link_to "Follow", "#", "id" => "follow", "rel" => "popover", "title" => "How to Follow Other Members", "data-content" => "Click on the Community section of the menu bar, check out member profiles, click the Follow button on their profile pagees, and their posts as well as your own will automatically show up on your home page." %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
	<div class="center hero-unit">
  		<h1>Shooloo</h1>
  		<h2>Making math relevant, collaborative, and fun!</h2>	
       <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>
