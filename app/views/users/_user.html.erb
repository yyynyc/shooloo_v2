<li>
	<div class="row">
		<div class="span1.5">	
  			<%= image_tag user.avatar.url (:thumb) %>
		</div>
		<div class="span5.5">    
		  <%= link_to user.screen_name, posts_user_path(user) %>,
		  <%= user.grade %> <br/>
		  <a href="<%= following_user_path(user) %>">
		    <strong id="following" class="stat">
		      <%= user.followed_users.count %>
		    </strong></a>
		    following,
		  <a href="<%= followers_user_path(user) %>">
		    <strong id="followers" class="stat">
		      <%= user.followers.count %>
		    </strong></a>
		    followers <br/>
			published
				<a href="<%= posts_user_path(user) %>" >
				<%= pluralize(user.posts.count, "post") %></a>,
			rated
				<a href="<%= rated_posts_user_path(user) %>" >
				<%= pluralize(user.rated_posts.count, "post") %></a>,
			commented
				<a href="<%= commented_posts_user_path(current_user) %>" >
				<%= pluralize(current_user.commented_posts.count, "post") %></a>.
		</div >
		<div class="span1">			
			  <div id="follow_form">
				  <% if current_user.following?(user) %>
				    <%#= render 'unfollow' %>
				  <% else %>
				    <%#= render 'follow' %>
				  <% end %>
			  </div>			
		</div>
	</div>
  <% if current_user.admin? && !current_user?(user) %></br>
    <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>,
    <%= user.first_name %>
	<%= user.last_name %>, 
	<%= user.email %>
  <% end %>
</li>