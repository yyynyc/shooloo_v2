<% if signed_in? %>
	<% url = user_path %>
	<% save = "Update My Information" %>
<% else %>
	<% url = users_path %>
	<% save = "Create My Account" %>
<% end %>	
	<%= semantic_form_for@user, :url => url, :html => { :multipart => true, :class => "form-horizontal-user" } do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%=f.inputs do %>         
			<%= f.input :first_name %>
			<%= f.input :last_name %>
			<%= f.input :email %>
			<%= f.input :email_confirmation %>
			<%= f.input :grade, as: :select, collection: ["Kindergarten", "1st grade", "2nd grade", "3rd grade", "4th grade", "5th grade", "6th grade", "7th grade", "8th grade", "9th grade", "10th grade", "11th grade", "12 grade", "Teacher", "Parent", "Tutor"], include_blank: true %>
			<%= f.input :screen_name%>
			<%= f.input :password %>
			<%= f.input :password_confirmation %> 
			<%= f.input :avatar, as: :file, label: "Avatar upload" %> 
			<%= f.input :avatar_remote_url, label: "or avatar url",
				hint: (f.object.new_record? || f.object.avatar.nil?)?
				f.template.content_tag(:span, "No avatar yet") : 
				f.template.image_tag(f.object.avatar.url(:thumb)) %>   
		<% end %>
		<%= f.actions do %>
			<%= f.action :submit, label: save, as: :button, button_html: { class: " btn btn-formtastic btn-large btn-primary" } %>
		<% end %>
	<% end %>