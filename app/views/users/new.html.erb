<div itemscope itemtype="http://schema.org/CreativeWork">
  <meta itemprop="description" content="Become a Shooloo member to access over 4,000 student-authored math word problems aligned with the Common Core State Standard.">
  <%= render 'shared/meta' %>
  <% title "Sign Up" %>

	<h1>Sign Up</h1>
	<div class="row">
	  <div class="span6 offset3">
		<ul class="nav nav-tabs alert-heading">
			<li class="active"><%= link_to "I am an Educator/Parent", signup_path %></li>
			<li><%= link_to "I am a Student", signup_student_path %></li>
		</ul>
		<p class='center yes'>If you are <strong>NOT</strong> an educator or a parent, <%= link_to "sign up here", signup_student_path %>.</p>	    
	  	<%= render partial: 'users/signup_form', locals: {user: @user, role_form: "teacher"} %>
	  </div>
	</div>
</div>