<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<setion>
			<h1><%= @user.name %></h1>
		</section>
	</aside>
</div>
<div class="span8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>

	