<% provide(:title, "#{@user.screen_name}_Commented_Posts") %>
<div class="row">
  	<aside class="span4">
      <section>
        <%= render 'shared/user_info', user: @user %>
      </section>
      <section>
        <%= render 'shared/stats', user: @user %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>    
	  </aside>
	<div class="span8">
    <%= render 'users/follow_nudge' %>  
    <h3 class="feed_item">
      <%= @user.screen_name %>'s Commented Posts (<%= @user.commented_posts.count %>)
    </h3>
  	<% if @user.commented_posts.any? %>      		      	
  		<ol class="posts">
    		<%#= render partial: 'shared/feed_item', collection: @commented_posts, order: 'comments.updated_at DESC' %>
        <%= render partial: 'shared/feed_item', collection: @commented_posts %>
  		</ol>
  		<%= will_paginate @commented_posts %>
    <% else %>          
      <div class="box">
        <% if current_user?(@user) %> 
          <h1> Let's get moving!</h1>
          <p class='center'><img src="/attachments/moving.gif" alt="Shooloo Math Can Do" align="center"></p>
          <div class='about'>
          <p>Go to the <%= link_to "All Posts", posts_path %> section and <strong>comment</strong> on those posts you find interesting.</p>
          <p>Show your friends that you care!</p>
          </div>
        <% else %>
          <h1> Sigh...</h1>
          <p class='center'><img src="/attachments/bored_2.gif" alt="Shooloo Math Can Do" align="center"></p>
          <div class='about'>
          <p><%= @user.screen_name %> has not commented on anyone's posts yet.</p> 
            <p><strong>Nudge</strong> <%= @user.screen_name %> into commenting on your posts. Press the green button above that says "NUDGE".</p>
          </div>
        <% end %> 
      </div> 
   	<% end %>
	</div>
</div>