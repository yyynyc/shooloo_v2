<% title "Common Core Math Word Problems Critiqued by #{@user.screen_name}" %>
<% description "List of common core math word problems commented by #{@user.screen_name}" %>
<% keywords 'Shooloo, common core, CCSS, math, word problem, critique, real life, cooperative learning' %>

<div class="row">
  	<aside class="span4">
      <section>
        <%= render 'shared/user_info', user: @user %>
      </section>
      <section>
        <%= render 'shared/stats', user: @user %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>    
	  </aside>
	<div class="span8">
    <%= render 'users/follow_nudge' %>  
    <h3 class="feed_item">
      <%= @user.screen_name %>'s Commented Posts (<%= @user.commented_posts.count %>)
    </h3>
  	<% if @user.commented_posts.any? %>      		      	
  		<ol class="posts">
        <%= render partial: 'shared/feed_item', collection: @commented_posts %>
  		</ol>
  		<%= will_paginate @commented_posts %>
    <% else %> 
      <% if current_user?(@user) %>
        <div class="row">
          <div> 
              <% provide @video=Video.find(5) %>
              <%= render partial: 'videos/video_player', locals: {video: @video} %>
          </div>
        </div>  
        <h1> Let's get moving!</h1>
        <p class='center'><img src="/attachments/moving.gif" alt="Shooloo Math Can Do" align="center"></p>
        <div class='about'>
          <p class='center'>Watch the video above to get started.</p>
        </div>
      <% else %>
        <div class="box">
          <h1> Sigh...</h1>
          <p class='center'><img src="/attachments/bored_2.gif" alt="Shooloo Math Can Do" align="center"></p>
          <div class='about'>
          <p><%= @user.screen_name %> has not commented on anyone's posts yet.</p> 
            <p><strong>Nudge</strong> <%= @user.screen_name %> into commenting on your posts. Press the green button above that says "NUDGE".</p>
          </div>
        </div> 
      <% end %> 
   	<% end %>
	</div>
</div>