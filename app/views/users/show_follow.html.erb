<% title @title %>
<% description @description %>
<% noindex %>
<% nofollow %>

<div class="row">
  <aside class="span4">
    <section>    
      <%= render 'shared/user_info', user: @user %>
    </section>    
    <section>
      <%= render 'shared/stats', user: @user %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to image_tag(user.avatar.url (:small), :alt => "Shooloo member #{user.screen_name}", :title => "Shooloo member #{user.screen_name}"), posts_user_path(user) %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% elsif @user == current_user %>
      <div class="normal-font">
        <p class="center" >
          <iframe width="500" height="375" src="http://www.schooltube.com/embed/07ef5f8b5db34e1f9ab6" frameborder="0" allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" webkitallowfullscreen="webkitallowfullscreen"></iframe>
        </P> 
        <p class="center">It feels so lonely not having any followers. </p>
        <p class='center'><img src="/attachments/cry.gif" alt="Shooloo Math Can Do"></p>
        <p class="center"> Watch the video above and learn how to get followers.</p> 
      </div>
    <% else %>
        <div class="welcome"> 
          <p class="center">You can become <%=@user.screen_name%>'s first follower!
          </p>
        </div>
    <% end %>
  </div>
</div>
