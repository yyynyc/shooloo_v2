<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section class="row">    
      <div class="span1.5">
        <%= image_tag @user.avatar.url (:thumb) %>
      </div>
      <div class="span2">
        <h1 class="user_name"><%= @user.name %></h1>
        <span><%= link_to "view my profile", @user %></span>
        <span><b>Posts:</b> <%= @user.posts.count %></span>
      </div>
    </section>
    
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
